{
  "name": "BoardCamp",
  "type": "module",
  "version": "1.0.0",
  "main": "server.js",
  "scripts": {
    "start": "node src/server.js",
    "dev": "nodemon -L src/server.js",
    "docker:dev": "docker-compose up --build",
    "docker:stop": "docker-compose stop",
    "docker:down": "docker-compose down -v",
    "docker:destroy": "docker-compose down -v --rmi all",
    "docker:test": "docker-compose run --rm boardcamp-api npm test",
    "docker:test:watch": "docker-compose run --rm boardcamp-api npm run test:watch",
    "test": "jest",
    "test:watch": "jest --coverage --watchAll"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "description": "",
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^17.2.0",
    "express": "^5.1.0",
    "joi": "^17.13.3",
    "nodemon": "^3.1.10",
    "pg": "^8.16.3",
    "swagger-ui-express": "^5.0.1"
  },
  "devDependencies": {
    "@babel/core": "^7.28.0",
    "@babel/preset-env": "^7.28.0",
    "babel-jest": "^30.0.5",
    "jest": "^30.0.5"
  }
}